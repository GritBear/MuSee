extends layout

block content
    div.headerelm
        h1= title
    // <button onclick="updatePitch(0);">sample</button>
    div#visualizer
        canvas#buffer1.vcanvas(width='1400', height='700', style="border:4px solid #d3d3d3;")
        canvas#buffer2.vcanvas(width='1400', height='700', style="border:4px solid #d3d3d3;")

    div.control_btn
        button(onclick='this.innerText = togglePlayback(0)') demo0
        button(onclick='this.innerText = togglePlayback(1)') demo1
        //button(onclick='toggleLiveInput()') use live input
        button(onclick='toggleOscillator()') oscillator

    //loading textures
    .texture
        img#leaf1(src='/images/leaf1.png', alt='leaf1', height='256', width='256' hidden)
        img#flower1(src='/images/flower1.png', alt='flower1', height='256', width='256' hidden)

    //loading resources
    link(rel='stylesheet', href='/stylesheets/index.css')
    
    script(type='text/javascript' src='/javascripts/requestAnimFrame.js')
    script(type='text/javascript' src='/javascripts/audio_global.js')
    script(type='text/javascript' src='/javascripts/visual_global.js')
    script(type='text/javascript' src='/javascripts/melodyStore.js')
    script(type='text/javascript' src='/javascripts/pitchdetect.js')
    script(type='text/javascript' src='/javascripts/deterministicTree.js')
    script(type='text/javascript' src='/javascripts/visual.js')
